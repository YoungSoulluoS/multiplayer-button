{
  "schemaVersion": 1,
  "id": "multiplayer-button",
  "version": "${version}",

  "name": "Multiplayer Button",
  "description": "Adds a button to the singleplayer and multiplayer menu when you pause the game making it easier to join servers!",
  "authors": [
    "PiemanDev",
    "hamarb123"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/multiplayer-button",
    "sources": "https://github.com/LimeShulkerBox/multiplayer-button"
  },

  "license": "MIT",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.pieman.multiplayerbutton.AddButtonMixinInitializer"
    ]
  },
  "accessWidener" : "multiplayerbutton.accesswidener",
  "mixins": [
    "multiplayerbutton.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": "1.20.x"
  },
  "suggests": {
    "another-mod": "*"
  }
}
